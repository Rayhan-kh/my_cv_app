<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/Normal_Image_style"
            android:layout_width="72dp"
            android:layout_height="0dp"
            tools:srcCompat="@tools:sample/avatars"
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            android:id="@+id/iv_project"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintDimensionRatio="h,1:1"/>

    <TextView
            tools:text="Project Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_project_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_project"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/iv_project"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tv_project_desc"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/H2BoldTextAppearance"
            android:textColor="@color/colorTextPrimary"
            android:textSize="15sp"/>

    <TextView
            android:textColor="@color/colorTextSecondary"
            android:ellipsize="end"
            tools:text="A Project I made many years ago.May be I forgot for whome or what I am writing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_project_desc"
            app:layout_constraintTop_toBottomOf="@+id/tv_project_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_project"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:minLines="2"
            android:maxLines="2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tb_see_more"
            style="@style/H3Avenir"
            android:layout_marginTop="4dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/see_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tb_see_more"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_project"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_project_desc"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_project"
            app:layout_constraintHorizontal_bias="0.5"
            style="@style/H4TextAppearance"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextUnderlined"
            android:textSize="12sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>