<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintHorizontal_weight="1"
            style="@style/H2TextAppearance"
            android:text="Dec,2019 - Present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/light_green_bg"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Developer"
                style="@style/H3TextAppearance"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="4dp"
                style="@style/H4TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Zayaan Pvt. Ltd."/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="56dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_hotel"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintDimensionRatio="h,1:1"/>
</androidx.constraintlayout.widget.ConstraintLayout>