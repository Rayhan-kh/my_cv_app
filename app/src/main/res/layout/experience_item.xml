<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/iv_company"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp"
            >

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Android Developer"
                style="@style/H2BoldTextAppearance"
                android:ellipsize="end"
                android:maxLines="1"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_weight="1"
                style="@style/H2TextAppearance"
                app:fontFamily="@font/avenir_regular"
                tools:text="Dec,2019 - Present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_joined"
                android:ellipsize="end"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_designation"
                android:layout_marginTop="4dp"
                style="@style/H3Avenir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:text="Go Zayaan Pvt. Ltd."/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="56dp"
            android:layout_height="0dp"
            tools:srcCompat="@drawable/ic_hotel"
            android:id="@+id/iv_company"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintDimensionRatio="h,1:1"
            android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>